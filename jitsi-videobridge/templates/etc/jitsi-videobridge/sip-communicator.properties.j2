org.jitsi.impl.neomedia.transform.srtp.SRTPCryptoContext.checkReplay=false
org.jitsi.videobridge.SINGLE_PORT_HARVESTER_PORT={{ jvb_harvester_port }}
org.jitsi.videobridge.TCP_HARVESTER_PORT={{ jvb_harvester_port }}
org.jitsi.videobridge.DISABLE_TCP_HARVESTER={{ jvb_disable_tcp_harverster | bool | lower }}
org.ice4j.ipv6.DISABLED=true
org.ice4j.ice.harvest.STUN_MAPPING_HARVESTER_ADDRESSES=meet-jit-si-turnrelay.jitsi.net:443
#org.ice4j.ice.harvest.NAT_HARVESTER_LOCAL_ADDRESS=
#org.ice4j.ice.harvest.NAT_HARVESTER_PUBLIC_ADDRESS=

{% if jitsi_external_ip is defined %}
org.ice4j.ice.harvest.NAT_HARVESTER_LOCAL_ADDRESS={{ ansible_default_ipv4.address }}
org.ice4j.ice.harvest.NAT_HARVESTER_PUBLIC_ADDRESS={{ jitsi_external_ip }}
{% endif %}

org.jitsi.videobridge.xmpp.user.acc1.HOSTNAME={{ jitsi_xmpp_server }}
org.jitsi.videobridge.xmpp.user.acc1.DOMAIN={{ jvb_xmpp_domain }}
org.jitsi.videobridge.xmpp.user.acc1.USERNAME={{ jvb_xmpp_user }}
org.jitsi.videobridge.xmpp.user.acc1.PASSWORD={{ jvb_xmpp_pass }}
#org.jitsi.videobridge.xmpp.user.acc1.SECRET={{ jvb_xmpp_secret }}
org.jitsi.videobridge.xmpp.user.acc1.MUC_JIDS=JvbBrewery@internal.{{ jvb_xmpp_auth_domain }}
org.jitsi.videobridge.xmpp.user.acc1.MUC_NICKNAME={{ ansible_fqdn }}

# Disable certificate verification
org.jitsi.videobridge.xmpp.user.acc1.DISABLE_CERTIFICATE_VERIFICATION={{ jvb_disable_cert_check | bool | lower }}

# Enable stats
org.jitsi.videobridge.ENABLE_STATISTICS={{ jvb_statistics_enable | lower }}
org.jitsi.videobridge.rest.private.jetty.port={{ jvb_statistics_port }}
org.jitsi.videobridge.STATISTICS_TRANSPORT=muc,colibri
org.jitsi.videobridge.STATISTICS_INTERVAL={{ jvb_statistics_interval }}
