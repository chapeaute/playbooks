# This file was generated by Ansible for {{ ansible_fqdn }}
# Do NOT modify this file by hand!

smtpd_banner = $myhostname ESMTP $mail_name
biff = no

append_dot_mydomain = no

readme_directory = no

myhostname = {{ postfix_myhostname }}
myorigin = {{ postfix_myorigin }}
mydestination = {{ postfix_mydestination | join(",") }}
mynetworks = {{ postfix_mynetworks | join(" ") }}
mydomain = {{ postfix_mydomain }}
inet_interfaces = {{ postfix_inet_interfaces }}
relayhost = {{ postfix_relayhost|default() }}
{% if postfix_relay_domains | length > 0 %}
relay_domains = $mydestination,{{ postfix_relay_domains| join(", ")  }}
{% endif %}

alias_database = hash:/etc/aliases
alias_maps = hash:/etc/aliases
smtp_generic_maps = hash:/etc/postfix/generic
{% if postfix_rewrite_sender_address %}
sender_canonical_maps = pcre:/etc/postfix/sender_canonical_maps
{% endif %}

{% if postfix_local_user_relay_address %}
# Relay all local mail to a specific address
virtual_alias_maps = pcre:/etc/postfix/virtual
{% endif %}

{% if postfix_local_recipient_map %}
local_recipient_maps = {{ postfix_local_recipient_map }}
{% endif %}

mailbox_size_limit = 0
recipient_delimiter = +
