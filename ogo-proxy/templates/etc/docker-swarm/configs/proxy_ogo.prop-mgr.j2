#############################################

#############################################
# IP DATABASE CONFIGURATION                 #
#############################################

# IP database.  Redis host. Defaults to localhost.
redis_host={{ redis_opts.dns }}-rw

# IP database. Redis Port. Defaults to -1 (no port passed to Redis).
redis_port={{ redis_port }}

# IP database. Database number. Defaults to 0.
redis_db_number=0

# IP database. Connection pool min idle. Defaults to 20.
redis_min_idle=20

# IP database. Redis connection pool max idle. Defaults to 200.
redis_max_idle=200


#############################################
