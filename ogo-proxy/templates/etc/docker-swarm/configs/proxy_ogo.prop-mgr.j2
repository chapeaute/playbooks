###################################################################
# proxy_ogo.properties 
#
# Defines reverse proxy conf info for etcd, RabbitMQ, Redis...
# Same file name is used on Worker and Manager
# Default location is /usr/local/tomcat/webapps/
#
# Default values are used if file does not exist.
# The default values are the commented one below.
#
# All values are superseded if defined at Worker or Manager start:
# Example: java -Detcd_endpoint=http://my_new_etcd:2379
#
##################################################################

# etcd server / endpoint. Defaults to  http://etcd:2379
etcd_endpoint=http://{{ etcd_opts.dns }}:{{ etcd_port }}

# RabbitMQ host. Defaults to localhost
rabbitmq_host={{ rabbitmq_opts.dns }}

# RabbitMQ IP. Defaults to -1 (no port passed to RabbitMQ)
rabbitmq_port={{ rabbitmq_port }}

# RabbitMQ username. Defaults to guest
rabbitmq_username={{ rabbitmq_admin_user }}

# RabbitMQ password. Defaults to guest
rabbitmq_password={{ rabbitmq_admin_pass }}

# RabbitMQ number of threads for worker publish. Defaults to 20.
rabbitmq_publisher_thread_pool_size= 20

# RabbitMQ Channel pool min idle. Defaults to 10.
rabbitmq_channel_pool_min_idle=10

# RabbitMQ Channel pool max total. Defaults to 20.
rabbitmq_channel_pool_max_total=20

# RabbitMQ max queue length in bytes. Defaults to 5242880 (5Mb).
rabbitmq_queue_max_length_bytes=5242880

#############################################
